<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Booking"
        android:textColor="#ff0033"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtReservation"
        android:layout_below="@+id/txtBooking"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Venue"
        android:inputType="text"
        android:textColorHint="#666fff"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinDj"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtVenue"
        android:entries="@array/Artists"
        android:spinnerMode="dialog"
        android:prompt="@string/spinner" />
    <Button
        android:id="@+id/btnDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinDj"
        android:layout_alignParentLeft="true"
        android:text="Date"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtHours"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnDate"
        android:ems="10"
        android:hint="Number of Hours"
        android:inputType="number"
        android:textColorHint="#666fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnReserve"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:layout_alignLeft="@+id/txtReservation"
        android:layout_below="@+id/txtHours"
        android:layout_marginTop="14dp"
        android:text="Reservation &amp; Price"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnReserve"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:textColor="#ff0033"
        android:textSize="20sp" />

</RelativeLayout>